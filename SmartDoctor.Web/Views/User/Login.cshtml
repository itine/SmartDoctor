@model SmartDoctor.Data.JsonModels.AuthModel
<center>
    <h2>Login</h2>
    <form asp-action="Login" asp-controller="User" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly" />
        <div>
            <div class="form-group">
                <label asp-for="PhoneNumber">Enter phone number</label><br />
                <input id="phoneTbx" type="text" asp-for="PhoneNumber" />
                <span asp-validation-for="PhoneNumber" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Enter password</label><br />
                <input id="passwordTbx" asp-for="Password" />
                <span asp-validation-for="Password" />
            </div>
            <div class="form-group">
                <input id="successBtn" type="submit" value="Login" class="mySuccess" />
            </div>
        </div>
    </form>
</center>
<script>

    $("#successBtn").mouseover(function () {
        var phone = $("#phoneTbx").val();
        var pass = $("#passwordTbx").val();
        validatePhone(phone);
        validatePass(pass));
    });

    function validatePass(val) {
        if (val.trim() === "") {
            alert("Укажите пароль");
            return false;
        }
        if (val !== "") {
            if (val.length < 8) {
                alert("Пожалуйста, укажите пароль длиннее 8 символов");
                return false;
            }
        }
        return true;
    }

    function validatePhone(val) {
        if (val.trim() === "") {
            alert("Укажите номер");
            return false;
        }
        if (val !== "") {
            if (!(/^\+?[78][-\(]?\d{3}\)?-?\d{3}-?\d{2}-?\d{2}$/.test(val))) {
                alert("Пожалуйста, укажите правильное значение номер телефона. Примеры: \n89103123167, 7-910-221-22-22, +7(910)-221-22-22");
                return false;
            }
        }
        return true;
    }

</script>